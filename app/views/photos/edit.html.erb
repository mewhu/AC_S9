<% if @photo.errors.present? %>
  <ul>
    <% @photo.errors.each do |error, message| %>
      <li><%= "#{error.capitalize} #{message}" %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @photo do |f| %>
<%# 完整寫法如下所示，告訴此form，按下submit-button觸發update動作，將內容送去prefix為"photo"的url path，並採用HTTP-PUT%>
<%#= form_for @photo, :url => photo_path, :method => :put do |f| %>
<%# PS: 也可以採用HTTP-PATCH, 即":method => :patch" %>

  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>

  <%= f.label :date, "Date" %>
  <%= f.text_field :date %>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

  <%= f.label :file_location, "File Location" %>
  <%= f.text_field :file_location %>

  <%= f.submit "Update" %>
<% end %>
